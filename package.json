{
  "name": "event-link",
  "version": "1.0.0",
  "description": "Todo List backend with Express, TypeScript, Lambda, and DynamoDB",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "npm run typecheck && npm run compile",
    "typecheck": "tsc --noEmit",
    "compile": "tsc",
    "dev:serverless": "serverless offline start",
    "dev:local": "nodemon",
    "dynamo:local": "cd dynamoDB && java --enable-native-access=ALL-UNNAMED -Djava.library.path=./DynamoDBLocal_lib -jar DynamoDBLocal.jar -sharedDb",
    "dev": "concurrently \"npm run dynamo:local\" \"npm run dev:local\"",
    "deploy": "serverless deploy",
    "setup:local": "scripts\\setup-local-env.cmd",
    "db:init": "node scripts/init-dynamodb-table.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.x",
    "@aws-sdk/lib-dynamodb": "^3.x",
    "@vendia/serverless-express": "^4.x",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.x",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.x",
    "@types/connect-timeout": "^1.9.0",
    "@types/cors": "^2.8.x",
    "@types/express": "^4.17.x",
    "@types/node": "^20.x",
    "@types/uuid": "^9.0.x",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "concurrently": "^9.2.1",
    "eslint": "^8.x",
    "nodemon": "^3.x",
    "serverless": "^3.x",
    "serverless-offline": "^12.x",
    "serverless-plugin-typescript": "^2.x",
    "ts-node": "^10.x",
    "typescript": "^5.x"
  }
}
